{
  "name": "elkuku/g11n",
  "description": "The g11n language library",
  "version": "3.1",
  "license": "WTFPL",
  "authors": [
    {
      "name": "Nikolai Plath",
      "email": "der.el.kuku@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "league/flysystem": "1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.*",
    "squizlabs/php_codesniffer": "1.*"
  },
  "autoload": {
    "psr-4": {
      "ElKuKu\\G11n\\": "library/g11n/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ElKuKu\\G11n\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "ci": [
      "@phpcs",
      "@test"
    ],
    "phpcs": "vendor/bin/phpcs library tests --standard=build/phpcs/Joomla --report=summary --extensions=php -np",
    "test": "vendor/bin/phpunit"
  }
}
