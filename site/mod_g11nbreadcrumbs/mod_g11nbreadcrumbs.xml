<?xml version="1.0" encoding="UTF-8"?>

<extension type="module" version="1.6.0" client="site" method="upgrade">
  <name>g11nBreadcrumbs</name>
  <author>Joomla! Project + Nikolai Plath</author>
  <creationDate>July 2006</creationDate>
  <copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights		reserved.</copyright>
  <license>GNU General Public License version 2 or later; see LICENSE.txt	</license>
  <authorEmail>admin@joomla.org</authorEmail>
  <authorUrl>www.joomla.org</authorUrl>
  <version>1.6.0</version>
  <description>Shows Breadcrumbs</description>
  <files>
    <filename module="mod_g11nbreadcrumbs">mod_g11nbreadcrumbs.php</filename>
    <folder>tmpl</folder>
    <filename>helper.php</filename>
    <filename>index.html</filename>
    <filename>mod_g11nbreadcrumbs.xml</filename>
  </files>
  <config addfieldpath="/libraries/g11n/elements/formfields">
    <fields name="params">
      <fieldset name="basic">
        <field name="showHere" type="radio" default="1" label="Show 'You are here'" description="Show/Hide 'You are here' text in the Pathway">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field name="showHome" type="radio" default="1" label="Show Home" description="Show/Hide the Home element in the Pathway">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field name="homeText" type="text" default="Home" label="Text for Home Entry" description="This text will be shown as Home entry. If the field is left empty, it will use the default value from the mod_breadcrumbs.ini language file." />
        <field name="showLast" type="radio" default="1" label="Show Last" description="Show/Hide the last element in the Pathway">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field name="separator" type="text" label="Text Separator" description="A text separator" />
      </fieldset>
      <fieldset name="advanced">
        <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
        <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
        <field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
          <option value="1">JGLOBAL_USE_GLOBAL</option>
          <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
        </field>
        <field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
        <field name="cachemode" type="hidden" default="itemid">
          <option value="itemid" />
        </field>
      </fieldset>
    </fields>
  </config>
</extension>